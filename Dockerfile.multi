# Multi-stage build
FROM node:alpine AS builder

# Çalışma dizini
WORKDIR /app

# Dosyaları kopyala
COPY . .

# Build stage (boş - static site)
RUN echo "Static site, no build needed"

# Production stage
FROM nginx:alpine

# Static dosyaları kopyala
COPY --from=builder /app /usr/share/nginx/html/

# Nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Port 80
EXPOSE 80

# Nginx başlat
CMD ["nginx", "-g", "daemon off;"]
